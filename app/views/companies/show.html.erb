<%= @company.name %>

<%= link_to "Upload new document", new_company_document_path(@company) %>
<br>
<% @company.documents.each do |document| %>
  <%= link_to "Document", company_document_path(@company, document) %>
<% end %>



<% @events.each do |event| %>
  <div class="col-md-5">
    <div class="card card-block">
      <h4 class="card-title">
        <%= link_to event.name, company_event_path(@company, event) %>
      </h4>
      <p>Room: <%= event.event_hall %></p>
      <p>Date: <%= event.start_time %></p>
    </div>
  </div>
<% end %>
