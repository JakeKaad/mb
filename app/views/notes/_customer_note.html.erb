<%= note.message %>
<div class="btn-group pull-right">
  <%= link_to edit_customer_note_path(customer, note), remote: true do %>
    <button class="btn btn-primary btn-sm" id=<%="edit_#{note.id}_button"%>>Edit</button>
  <% end %>
  <%= link_to 'Destroy',  note,  method: :delete, class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %>
</div>
</br>
<small><i>
  Created on <%= note.created_at.strftime("%m/%d/%y at %I:%M%p") %>
</i></small>
