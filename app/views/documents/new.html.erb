<%= render 'companies/header', company: @company, title: "Add new document" %>

<%= form_for [@company, @document] do |f| %>
  <%= render 'layouts/errors', object: @document %>
  <fieldset class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :file, "Microsoft Office Document", helper: "Only .docx files are accepted" %>
    <%= f.file_field :file %>
  </fieldset>

  <%= f.submit %>
<% end %>
