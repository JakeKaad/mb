<div>
  <% documents.each do |document| %>
    <div class="col-xs-3">
      <div class="card">
        <div class="card-block">
          <h4 class="card-title">
            <%= link_to document.title, company_document_path(@company, document) %>
          </h4>
          <p class="card-text"> <%= document.description %> </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
